import sys

under = 1
over = 1

i = 1
while (under != 0):
    under = under/2
    i += 1
print("Underflow :", sys.getsizeof(under), "final number:", under)

j = 1
while (over < 2**60000): #CAN'T REALLY FIND THE RIGHT NUMBER
    over = over*2
    j += 1
print("Overflow size: ", sys.getsizeof(over), "iteration: ", i, "final number: ", over)
